{
  "name": "frontend",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": ">=20.0.0"
  },
  "browserslist": {
    "production": [
      ">0.5%",
      "not dead",
      "not op_mini all",
      "last 2 versions",
      "Firefox ESR"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "scripts": {
    "predev": "lsof -ti:3000 | xargs kill -9 2>/dev/null || true",
    "dev": "cross-env PORT=3000 next dev",
    "prebuild": "npm run check-urls",
    "build": "next build",
    "start": "next start",
    "lint": "eslint . --cache --cache-location .next/cache/eslint",
    "type-check": "tsc --noEmit",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "playwright test",
    "fix-order": "node scripts/fix-order.mjs",
    "sitemap": "node scripts/generate-sitemap.mjs",
    "indexnow": "node scripts/indexnow-ping.mjs",
    "sitemap:ping": "node scripts/generate-sitemap.mjs && node scripts/indexnow-ping.mjs",
    "seo": "node scripts/seo-process.mjs",
    "check-urls": "node scripts/check-ratgeber-urls.mjs"
  },
  "dependencies": {
    "@next/third-parties": "^15.4.6",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-slot": "^1.2.4",
    "@react-pdf/renderer": "^4.3.0",
    "@tailwindcss/typography": "^0.5.16",
    "@vercel/analytics": "^1.5.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.1",
    "jspdf": "^3.0.1",
    "lucide-react": "^0.525.0",
    "micro": "^10.0.1",
    "mongodb": "^6.17.0",
    "next": "^15.4.8",
    "next-intl": "^4.5.3",
    "openai": "^5.6.0",
    "qrcode": "^1.5.4",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-markdown": "^10.1.0",
    "resend": "^4.6.0",
    "stripe": "^18.2.1",
    "tailwind-merge": "^3.4.0",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^16.0.3",
    "@playwright/test": "^1.48.2",
    "@types/jspdf": "^1.3.3",
    "@types/node": "^20",
    "@types/qrcode": "^1.5.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/styled-jsx": "^2.2.9",
    "@vitest/ui": "^1.2.0",
    "autoprefixer": "^10.4.21",
    "cross-env": "^7.0.3",
    "cssnano": "^7.1.0",
    "eslint": "^9",
    "eslint-config-next": "15.3.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2",
    "mongodb-memory-server": "^9.5.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.3",
    "ts-node": "^10.9.2",
    "typescript": "5.8.3",
    "vitest": "^1.2.0"
  }
}
